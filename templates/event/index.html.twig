{% extends 'base.html.twig' %}

{% block body %}

    <div class="flex-container">
        {{ form_start(eventForm) }}
        {{ form_widget(eventForm) }}
        <button>Search</button>
        {{ form_end(eventForm) }}

        <div class="flex-container">
            {% for event in events %}
                <div class="card">
                    <div class="flex-row" style="gap:50px">
                        {% if event.fields.thumbnail is defined %}
                            <img style="max-width: 200px;border-radius: 10px" src="{{ event.fields.thumbnail }}" alt="{{ event.fields.title_fr }} image">
                        {% endif %}

                        <div class="flex-container">
                            <div class="flex-container" style="gap:0">
                                <div class="bold">{{ event.fields.title_fr }}</div>
                                <div>{{ event.fields.daterange_fr }}</div>
                                <div>{{ event.fields.location_address }}</div>
                            </div>

                            <div>{{ event.fields.description_fr }}</div>
                            <a href="{{ event.fields.canonicalurl }}">{{ event.fields.canonicalurl }}</a>
                        </div>
                    </div>

                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}